  script.
   $(document).ready(function(){
     var line = hashData.average_intra_t(); 
     var test = $.jqplot('lineChart', [hashData], {
         title: "Global Network Hash Speed",
         seriesColors: ['blue', 'red'],
         axesDefaults: {
             labelRenderer: $.jqplot.CanvasAxisLabelRenderer
         },
         series: [{
             fill: true
         }, {
             fill: false,
             lineWidth: 2
         }],
         seriesDefaults: {
             showMarker: false,
             fillAndStroke: true,
             rendererOptions: {
                 highlightMouseOver: true,
                 highlightMouseDown: false,
                 highlightColor: 'black',
             },
             markerOptions: {
                 size: 7,
                 color: 'red',
                 shadow: false
             }
         },
         legend: {
             show: false
         },
         axes: {
             xaxis: {
                 label: "Block Nr.",
                 pad: 0,
                 tickOptions: {
                     showGridline: false,
                     tickInterval: 100
                 }
             },
             yaxis: {
                 label: "Hash speed (H/s)",
                 min: 0 //max: 500000
             }
         },
         highlighter: {
             show: true,
             sizeAdjust: 7.5,
             tooltipLocation: 'n',
             tooltipFormatString: '<b><i><span style="color:black; background-color:white">%d</span></b>',
             useAxesFormatters: false
         },
         cursor: {
             show: true
         },
         grid: {
             drawBorder: false,
             shadow: false,
             background: 'rgba(0,0,0,0)'//works to make transparent.
         }
     });
     var test2 = $.jqplot('lineChart2', [diffData], {
         title: "Global Network Difficulty",
         seriesColors: ['red'],
         axesDefaults: {
             labelRenderer: $.jqplot.CanvasAxisLabelRenderer
         },
         seriesDefaults: {
             showMarker: false,
             fill: false,
             fillAndStroke: true,
             rendererOptions: {
                 highlightMouseOver: true,
                 highlightMouseDown: false,
                 highlightColor: 'black',
             },
             markerOptions: {
                 size: 7,
                 color: 'blue',
                 shadow: false
             }
         },
         legend: {
             show: false
         },
         axes: {
             xaxis: {
                 label: "Block Nr.",
                 pad: 0,
                 tickOptions: {
                     showGridline: false,
                     tickInterval: 100
                 }
             },
             yaxis: {
                 label: "Difficulty",
                 min: 0,
             }
         },
         highlighter: {
             show: true,
             sizeAdjust: 7.5,
             tooltipLocation: 'n',
             tooltipAxes: 'y',
             tooltipFormatString: '<b><i><span style="color:black; background-color:white">%.8f</span></b>',
             useAxesFormatters: false
         },
         cursor: {
             show: true
         },
         grid: {
             drawBorder: false,
             shadow: false,
             background: 'rgba(0,0,0,0)'//works to make transparent.
         }
     });
     var test3 = $.jqplot('barChart', [timeData], {
         title: "Time to find 500 blocks in seconds",
         seriesColors: ['blue'],
         axesDefaults: {
             labelRenderer: $.jqplot.CanvasAxisLabelRenderer,
         },
         seriesDefaults: {
             renderer: $.jqplot.BarRenderer,
             showMarker: false,
             fill: false,
             fillAndStroke: true,
             rendererOptions: {
                 barWidth: 10,
                 highlightMouseOver: true,
                 highlightMouseDown: false,
                 highlightColor: 'red',
             },
         },
         legend: {
             show: false
         },
         axes: {
             xaxis: {
                 label: "Block Nr.",
                 pad: 0,
                 tickOptions: {
                     showGridline: false,
                     tickInterval: 1
                 }
             },
             yaxis: {
                 label: "500-BlockFindTime(s)",
                 min: 0,
             }
         },
         highlighter: {
             show: true,
             sizeAdjust: 7.5,
             tooltipLocation: 'n',
             tooltipAxes: 'y',
             tooltipFormatString: '<b><i><span style="color:black; background-color:white">%d</span></b>',
             useAxesFormatters: false
         },
         cursor: {
             show: true
         },
         grid: {
             drawBorder: false,
             shadow: false,
             background: 'rgba(0,0,0,0)'//works to make transparent.
         }
     });
   });

